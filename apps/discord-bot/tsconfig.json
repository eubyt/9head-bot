{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["./common/*"],
      "@module/*": ["./modules/*"],
      "@interface/*": ["./interfaces/*"],
      "@commands/*": ["./commands/*"],
      "@util/*": ["./util/*"],
      "@database/*": ["./database/*"],
      "@src/*": ["./*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["**/node_modules"]
}
